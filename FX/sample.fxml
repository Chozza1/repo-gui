<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>

<?import javafx.scene.layout.HBox?>
<VBox fx:controller="sample.Controller" xmlns:fx="http://javafx.com/fxml" alignment="center">
    <TextArea VBox.vgrow="ALWAYS" fx:id="mainTextArea"/>
    <HBox>
        <TextField HBox.hgrow="ALWAYS" alignment="BOTTOM_LEFT" onAction="#sendMessage" fx:id="message"/>
        <Button text="Send" onAction="#btnOneClickAction" alignment="BOTTOM_RIGHT" />
    </HBox>
</VBox>
